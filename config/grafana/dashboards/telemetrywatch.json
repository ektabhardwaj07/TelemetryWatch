{
  "title": "TelemetryWatch Overview",
  "tags": ["telemetrywatch"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "title": "HTTP Requests Total",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m]))",
          "refId": "A",
          "legendFormat": "Requests/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "decimals": 2
        }
      }
    },
    {
      "id": 2,
      "title": "HTTP Request Duration",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 9, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "refId": "A",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "refId": "B",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "id": 3,
      "title": "Active Connections",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 15, "y": 0},
      "targets": [
        {
          "expr": "active_connections",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "id": 4,
      "title": "Database Queries",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "rate(database_queries_total[5m])",
          "refId": "A",
          "legendFormat": "Queries/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        }
      }
    },
    {
      "id": 5,
      "title": "Database Query Duration",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(database_query_duration_seconds_bucket[5m])) by (le))",
          "refId": "A",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(database_query_duration_seconds_bucket[5m])) by (le))",
          "refId": "B",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "id": 6,
      "title": "Service Health",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "up{job=\"telemetrywatch\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {"text": "Down", "color": "red"},
                "1": {"text": "Up", "color": "green"}
              }
            }
          ],
          "unit": "none"
        }
      }
    },
    {
      "id": 7,
      "title": "HTTP Requests by Status",
      "type": "piechart",
      "gridPos": {"h": 8, "w": 9, "x": 6, "y": 16},
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m])) by (status)",
          "refId": "A"
        }
      ]
    },
    {
      "id": 8,
      "title": "HTTP Requests by Method",
      "type": "bargauge",
      "gridPos": {"h": 8, "w": 9, "x": 15, "y": 16},
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m])) by (method)",
          "refId": "A"
        }
      ]
    },
    {
      "id": 9,
      "title": "Error Rate",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 24},
      "targets": [
        {
          "expr": "sum(rate(http_errors_total[5m]))",
          "refId": "A",
          "legendFormat": "Errors/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "decimals": 3,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 0.1, "color": "yellow"},
              {"value": 1.0, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 10,
      "title": "Error Breakdown",
      "type": "piechart",
      "gridPos": {"h": 8, "w": 9, "x": 6, "y": 24},
      "targets": [
        {
          "expr": "sum(rate(http_errors_total[5m])) by (error_type)",
          "refId": "A"
        }
      ]
    },
    {
      "id": 11,
      "title": "4xx vs 5xx Errors",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 9, "x": 15, "y": 24},
      "targets": [
        {
          "expr": "sum(rate(http_errors_total{error_type=\"client_error\"}[5m]))",
          "refId": "A",
          "legendFormat": "4xx Client Errors"
        },
        {
          "expr": "sum(rate(http_errors_total{error_type=\"server_error\"}[5m]))",
          "refId": "B",
          "legendFormat": "5xx Server Errors"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      }
    },
    {
      "id": 12,
      "title": "Database Connection Pool",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 32},
      "targets": [
        {
          "expr": "db_pool_size",
          "refId": "A",
          "legendFormat": "Pool Size"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "id": 13,
      "title": "Request Payload Size",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 9, "x": 6, "y": 32},
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_size_bytes_bucket[5m])) by (le))",
          "refId": "A",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_size_bytes_bucket[5m])) by (le))",
          "refId": "B",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_size_bytes_bucket[5m])) by (le))",
          "refId": "C",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      }
    },
    {
      "id": 14,
      "title": "Response Payload Size",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 9, "x": 15, "y": 32},
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_response_size_bytes_bucket[5m])) by (le))",
          "refId": "A",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_response_size_bytes_bucket[5m])) by (le))",
          "refId": "B",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_response_size_bytes_bucket[5m])) by (le))",
          "refId": "C",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      }
    },
    {
      "id": 15,
      "title": "Endpoint Error Rates",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 18, "x": 0, "y": 40},
      "targets": [
        {
          "expr": "sum(rate(http_errors_total[5m])) by (endpoint, error_type)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      }
    },
    {
      "id": 16,
      "title": "SLA Violations",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 40},
      "targets": [
        {
          "expr": "sum(increase(sla_violations_total[5m]))",
          "refId": "A",
          "legendFormat": "Violations (5m)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 1, "color": "yellow"},
              {"value": 10, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 17,
      "title": "SLA Violations by Endpoint",
      "type": "bargauge",
      "gridPos": {"h": 8, "w": 18, "x": 0, "y": 48},
      "targets": [
        {
          "expr": "sum(increase(sla_violations_total[5m])) by (endpoint, sla_type)",
          "refId": "A"
        }
      ]
    },
    {
      "id": 18,
      "title": "Error Rate by Status Code",
      "type": "table",
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 48},
      "targets": [
        {
          "expr": "sum(rate(http_errors_total[5m])) by (status, error_type)",
          "refId": "A",
          "format": "table"
        }
      ]
    },
    {
      "id": 19,
      "title": "Active Platform Projects",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 56},
      "targets": [
        {
          "expr": "sum(platform_projects_total{status=\"active\"})",
          "refId": "A",
          "legendFormat": "Active Projects"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "id": 20,
      "title": "Platform Projects by Status",
      "type": "piechart",
      "gridPos": {"h": 8, "w": 9, "x": 6, "y": 56},
      "targets": [
        {
          "expr": "sum(platform_projects_total) by (status)",
          "refId": "A"
        }
      ]
    },
    {
      "id": 21,
      "title": "Platform Projects by Plan",
      "type": "bargauge",
      "gridPos": {"h": 8, "w": 9, "x": 15, "y": 56},
      "targets": [
        {
          "expr": "sum(platform_projects_total) by (plan)",
          "refId": "A"
        }
      ]
    },
    {
      "id": 22,
      "title": "Platform Projects List",
      "type": "table",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 64},
      "targets": [
        {
          "expr": "platform_projects",
          "refId": "A",
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "displayMode": "list",
            "inspect": false
          }
        }
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  }
}
